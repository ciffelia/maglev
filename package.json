{
  "name": "magrev",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types packages/backend/worker-configuration.d.ts",
    "migration:generate": "pnpm run --filter @magrev/backend migration:generate",
    "migration:apply:local": "wrangler d1 migrations apply magrev --local",
    "migration:apply:remote": "wrangler d1 migrations apply magrev --remote",
    "typecheck": "tsc --build",
    "lint": "pnpm run lint:eslint && pnpm run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "pnpm run fix:eslint && pnpm run fix:prettier",
    "fix:eslint": "eslint . --fix",
    "fix:prettier": "prettier --write ."
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^0.1.13",
    "@cloudflare/vitest-pool-workers": "^0.8.2",
    "@eslint/js": "^9.17.0",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^22.13.10",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "eslint": "^9.17.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.10.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-unicorn": "^57.0.0",
    "globals": "^16.0.0",
    "prettier": "3.5.3",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.0.5",
    "vitest": "^3.0.9",
    "wrangler": "^4.2.0"
  },
  "packageManager": "pnpm@10.6.4"
}
